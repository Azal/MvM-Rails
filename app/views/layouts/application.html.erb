<!DOCTYPE html>
<html>
<head>
  <title>MvM</title>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
    <div>
        <%= form_tag({:controller => 'movies', :action => 'show', :search => ''},
                     {:id => 'form_search'}) do %>
            <input type="text" class="search-bar" placeholder="Search your Movie" name="search">
         <% end %>
    </div>
    <%= yield %>
</body>
</html>
